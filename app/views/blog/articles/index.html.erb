<div>
  <h1>List of articles</h1>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', blog_article_path(article) %></td>
      <td><%= link_to 'Edit', edit_blog_article_path(article) %></td>
      <td><%= link_to 'Destroy', blog_articles_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New article', new_blog_article_path %>