
  <% @articles.each do |article| %>

      <%= article.title %><br/>
      <%= article.text %><br/>
      <%= link_to image_tag(article.image.url(:medium)), blog_article_path(article) %><br/>
      <%= link_to 'Read', blog_article_path(article) %><br/>
      <%= link_to 'Edit', edit_blog_article_path(article) %><br/>
      <%= link_to 'Destroy', [:blog, article],
              method: :delete,
              data: { confirm: 'Are you sure?' } %><br/>
  <% end %>
